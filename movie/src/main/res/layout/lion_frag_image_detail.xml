<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/lion_image_view_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/lion_image_title_tv"
        android:text="@string/lion_image_list_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_normal_16"
        android:layout_marginEnd="@dimen/space_normal_16"
        android:layout_marginStart="@dimen/space_normal_16"
        android:layout_marginTop="@dimen/space_large_48"
        android:ellipsize="end"
        android:letterSpacing="0.08"
        android:textStyle="bold"
        android:maxLines="1"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/text_large_26" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/space_large_48"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lion_image_current_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_normal_16"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="@color/light_grey"
            android:textSize="@dimen/text_large_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lion_image_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/text_large_20"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
