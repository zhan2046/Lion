<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_marginStart="@dimen/space_normal_16"
        android:layout_marginEnd="@dimen/space_normal_16"
        android:background="@color/mid_grey"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <TextView
        android:id="@+id/title_tv"
        android:text="@string/video_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_normal_16"
        android:layout_marginEnd="@dimen/space_normal_16"
        android:layout_marginStart="@dimen/space_normal_16"
        android:layout_marginTop="@dimen/space_large_32"
        android:ellipsize="end"
        android:letterSpacing="0.08"
        android:maxLines="1"
        android:textColor="@color/text_primary_dark"
        android:textSize="@dimen/text_large_24" />
</FrameLayout>